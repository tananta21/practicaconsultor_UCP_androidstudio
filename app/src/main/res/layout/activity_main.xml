<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo30"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#19321c"
        android:fontFamily="times new roman"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/local_ucp3"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold|italic"
        android:background="#79e0ff"
        android:text="consulte carreras (AQUI) -->"
        android:id="@+id/ucp"
        android:onClick="onButtonClick"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text="programa BECA18"
            android:background="#79e0ff"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            android:id="@+id/beca18"
            android:layout_below="@+id/ucp"
            android:layout_centerHorizontal="true"
            android:onClick="beca18_ucp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
               android:gravity="center"
                android:textStyle="italic"
                android:textSize="13sp"
                android:textColor="#2f8025"
               android:text="Visitenos en :"
                android:id="@+id/textView6"
                android:layout_above="@+id/facebook_ucp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/imageButton2"
                android:layout_alignEnd="@+id/imageButton2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_right"
                android:textColor="#9c96f03c"
                android:textStyle="bold|italic"
                android:textSize="11sp"
                android:id="@+id/textView2"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/logo3face"
        android:id="@+id/facebook_ucp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="facebook" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/telefono"
        android:layout_above="@+id/textView12"
        android:layout_alignRight="@+id/facebook_ucp"
        android:layout_alignEnd="@+id/facebook_ucp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="042 526805 042 503083"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignLeft="@+id/web_ucp"
        android:layout_alignStart="@+id/web_ucp"
        android:layout_alignBottom="@+id/imageButton2" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Direccion: Jr. Martinez de Compagñón 933 Jr. Leoncio Prado 1070"
        android:id="@+id/textView12"
        android:gravity="center"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="13sp"
        android:textColor="#2f8025"
        android:text="Encuentranos tambien en :"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:text="WWW.UCP.EDU.PE"
        android:textSize="14sp"
        android:background="#fff"
        android:textColor="#8d91ff"
        android:textStyle="bold|italic"
        android:id="@+id/web_ucp"
        android:layout_alignTop="@+id/facebook_ucp"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:onClick="wwwucp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="13sp"
        android:textColor="#2f8025"
        android:text="Informes al :"
        android:id="@+id/textView4"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
